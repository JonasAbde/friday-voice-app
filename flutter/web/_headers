# Friday Voice App - Web Configuration
# Security headers and caching rules for Cloudflare Pages

/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: microphone=(self), camera=(), geolocation=(), payment=()
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' wss: https:; media-src 'self' blob:; worker-src 'self' blob:;

# Service Worker - No caching (always fetch latest)
/sw.js
  Cache-Control: public, max-age=0, must-revalidate
  Service-Worker-Allowed: /

# Flutter JS - Cache for 1 year (content-hashed filenames)
/*.js
  Cache-Control: public, max-age=31536000, immutable

# CSS - Cache for 1 year
/*.css
  Cache-Control: public, max-age=31536000, immutable

# Icons - Cache for 1 year
/icons/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts - Cache for 1 year
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Images - Cache for 1 year
/assets/images/*
  Cache-Control: public, max-age=31536000, immutable

# Manifest - Cache for 1 day (may update occasionally)
/manifest.json
  Content-Type: application/manifest+json
  Cache-Control: public, max-age=86400

# Favicon - Cache for 1 week
/favicon.png
  Cache-Control: public, max-age=604800
