{
  "name": "friday-voice-app",
  "version": "0.3.0-canvas",
  "description": "Friday's self-built autonomous voice interface with Canvas feature",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "friday",
    "voice",
    "AGI",
    "autonomous",
    "canvas",
    "editor"
  ],
  "author": "Friday (AI Agent)",
  "license": "MIT",
  "dependencies": {
    "@picovoice/porcupine-web": "^4.0.0",
    "@picovoice/web-voice-processor": "^4.0.9",
    "@tensorflow-models/speech-commands": "^0.5.4",
    "@tensorflow/tfjs": "^4.22.0",
    "diff-match-patch": "^1.0.5",
    "docx": "^8.5.0",
    "dotenv": "^17.2.4",
    "express": "^4.18.2",
    "fabric": "^6.4.3",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.33.0",
    "jspdf": "^2.5.2",
    "lucide-react": "^0.563.0",
    "monaco-editor": "^0.52.0",
    "nanoid": "^5.0.9",
    "quill": "^2.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-split-pane": "^0.1.92",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "autoprefixer": "^10.4.24",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/canvas/tests/setup.js"],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "canvas/**/*.{js,jsx}",
      "!canvas/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
